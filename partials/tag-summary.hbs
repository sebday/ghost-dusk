{{#get "tags" filter="visibility:public" limit="all" order="name asc" as |publicTags|}}
{{#if publicTags}}
<div class="gh-outer">
    <section class="tag-summary-wrapper gh-inner">
        <div class="tag-summary-header">
            {{#if @custom.tag_summary_title}}
                <h2 class="tag-summary-title">{{@custom.tag_summary_title}}</h2>
            {{/if}}
            <span class="tag-summary-range"></span>
            <div class="tag-summary-period">
                <button class="tag-summary-period-btn" data-days="30">30d</button>
                <button class="tag-summary-period-btn" data-days="60">60d</button>
                <button class="tag-summary-period-btn" data-days="90">90d</button>
                <button class="tag-summary-period-btn active" data-days="all">All</button>
            </div>
        </div>
        <div class="tag-summary-cards">
            {{#foreach publicTags}}
                {{#has slug="important"}}
                <a class="tag-summary-card tag-summary-card-important" href="{{url}}" data-tag="{{slug}}">
                    <span class="tag-summary-card-count">-</span>
                    <span class="tag-summary-card-name">{{name}}</span>
                </a>
                {{/has}}
            {{/foreach}}
            {{#foreach publicTags}}
                {{#has slug="important"}}{{else}}
                <a class="tag-summary-card" href="{{url}}" data-tag="{{slug}}">
                    <span class="tag-summary-card-count">-</span>
                    <span class="tag-summary-card-name">{{name}}</span>
                </a>
                {{/has}}
            {{/foreach}}
        </div>
        {{#get "posts" limit="all" include="tags" as |allPosts|}}
        <script type="application/json" class="tag-summary-data">[{{#foreach allPosts}}{"d":"{{date published_at format="YYYY-MM-DD"}}","t":[{{#foreach tags}}"{{slug}}"{{#unless @last}},{{/unless}}{{/foreach}}]}{{#unless @last}},{{/unless}}{{/foreach}}]</script>
        {{/get}}
    </section>
</div>
{{/if}}
{{/get}}
